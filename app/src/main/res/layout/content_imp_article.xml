<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kohinoor.sandy.kohinnor.Activities.ImpArticleActivity"
    tools:showIn="@layout/activity_imp_article">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disp_article_title"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Title"
        android:fontFamily="@font/droidserif_regular"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disp_article_body"
        android:text="Body"
        android:textSize="18sp"
        android:alpha="0.8"
        android:textColor="#000"
        android:fontFamily="@font/droidserif_regular"
        android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>
