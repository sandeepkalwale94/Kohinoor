<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kohinoor.sandy.kohinnor.Activities.QuizActivity"
    tools:showIn="@layout/activity_quiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:weightSum="2"
        android:background="@color/WhatsupColor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Score"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/White"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:id="@+id/score"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quetion"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:id="@+id/quetion"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OptionA"
            android:background="@color/LightGrey"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:id="@+id/option1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OptionB"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:background="@color/LightGrey"
            android:id="@+id/option2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OptionC"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:background="@color/LightGrey"
            android:id="@+id/option3"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OptionD"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/LightGrey"
            android:id="@+id/option4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/White"
            android:background="@color/ActionBar"
            android:id="@+id/quit"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:textColor="@color/White"
                android:background="@color/ActionBar"
                android:id="@+id/next"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
